<h5 class="create"><%= link_to "â†’ Create new.", new_blog_path %></h5>
<div class="notice"><%= notice %></div>
  <% @blogs.each do |blog| %>
  <section>
  <div class="title"><%= link_to blog.title, blog_path(blog.id) %></div>
    <div class="content">
      <%= truncate(blog.content, length: 70 ) %>
      <span><%= link_to " Continue ", blog_path(blog.id) %></span>
      <ul class="edit-menu clearfix">
        <li><%= link_to "Edit", edit_blog_path(blog.id) %></li>
        <li><%= link_to "Delete", blog_path(blog.id), method: :delete, data:{confirm: "Are you sure to delete \"#{blog.title}\"?"} %></li>
      </ul>
    </div>
  </section>
<% end %>

