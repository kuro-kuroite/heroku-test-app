<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if logged_in? %>
            <div class="navbar-brand" href="#"><h1><%= link_to "Simple blog.", blogs_path %></h1></div>
          <% else %>
            <div class="navbar-brand" href="#"><h1><%= link_to "Simple blog.", root_path %></h1></div>
          <% end %>
        </div>

        <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if logged_in? %>
              <li><%= link_to "→ Blogs index.", blogs_path %></li>
              <li><%= link_to "→ Create new.", new_blog_path %></li>
              <li><%= link_to "→ Profile.", user_path(current_user.id) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "→ Log out.", session_path(current_user.id), method: :delete %></li>
            <% else %>
              <li><%= link_to "→ Log in.", new_session_path %></li>
              <li><%= link_to "→ Sign up.", new_user_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
